	filename ../../Browhphd/on_rational_aproximations_paper1/summer_2013/drafts/fig1gabaixnew16v2_legend.pdf
	scale 60

\end_inset

 
\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Level curves sparse-max consumer example 
\begin_inset CommandInset label
LatexCommand label
name "fig:Level-curves-gabaix"

\end_inset

.
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\align center
\begin_inset Float figure
wide false
sideways false
status open

\begin_layout Plain Layout
\align center
\begin_inset Graphics
	filename ../../Browhphd/on_rational_aproximations_paper1/summer_2013/drafts/fig1gabaixnew16v2part2.pdf
	scale 45

\end_inset

 
\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Relation between the Slutsky Matrix norm and relative attention.
 
\begin_inset CommandInset label
LatexCommand label
